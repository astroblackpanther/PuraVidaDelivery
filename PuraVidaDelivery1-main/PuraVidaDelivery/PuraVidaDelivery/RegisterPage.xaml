<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.RegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <StackLayout Padding="50">
                <Image Source="LogoApp.png" />
                <Entry x:Name="TxtEmail" Keyboard="Email" Placeholder="Correo Electrónico" Margin="10" />
                <Entry x:Name="TxtPass" IsPassword="True" Placeholder="Contraseña" Margin="10" />
                <Button x:Name="BtnRegister" Text="Registrarme" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>