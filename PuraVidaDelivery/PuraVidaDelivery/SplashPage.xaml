<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuraVidaDelivery.SplashPage">
    <ContentPage.Content>
        <!-- Image Background -->
        <Grid>
            <Image Source="Splash_Image.jpeg" Aspect="AspectFill"/>

            <!-- StackLayout to center content -->
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <!-- Place holder for logo or any other content -->
            </StackLayout>

            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar" Progress="0" HeightRequest="20" ProgressColor="#E6506E" 
                         HorizontalOptions="Fill" VerticalOptions="End" Margin="20"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
